{
  "name": "node-api",
  "version": "1.0.0",
  "description": "Backend API boilerplate using Node.js, Express, and TypeScript.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "postinstall": "patch-package",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "helmet": "7.1.0",
    "patch-package": "8.0.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/compression": "1.7.5",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/node": "20.10.5",
    "prettier": "3.7.1",
    "tsc-alias": "1.8.8",
    "tsx": "4.20.6",
    "typescript": "5.3.3"
  }
}
